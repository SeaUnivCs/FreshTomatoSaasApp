- if defined? @movie
  %h2 Details about "#{@movie.title}"
  %ul#details
    %li
      Title:
      = @movie.title
    %li
      Rating:
      = @movie.rating
    %li
      Released on:
      = @movie.release_date.strftime("%B %d, %Y")
  %h4 Description:
  %p#description= @movie.description
- else
  %h2 No movie detail info

= link_to 'Back to movie list', movies_path

= link_to "Delete \"#{@movie.title}\"?", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' }

